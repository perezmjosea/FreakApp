extends templates/layout

block content
    section(class="container-fluid movie", id=movie.id)
        .container
            .row.movie-block
                .col-12.col-md-4.col-lg-3.movie-img
                    img(class="", src="http://image.tmdb.org/t/p/w500" + movie.poster_path, alt=movie.title, title=movie.title)
                .col-12.col-md-8.col-lg-9.movie-info
                    <div class="movie-title secondary">#{movie.title}</div>
                    <div class="movie-date-rate grey">
                        <div class="movie-date">#{movie.release_date}</div>
                        //- <x-star-rating id="rating" value="3" number="5">
                        //- </x-star-rating>
                        div(class="movie-rate stars grey" id="stars" data-rating=`${movie.rating}`)
                            
                            <input type="radio" id="star5" name="rating" value="5" />
                            <label class="full" for="star5" title="Awesome - 5 stars"></label>
                        
                            <input type="radio" id="star4half" name="rating" value="4.5" />
                            <label class="half" for="star4half" title="Pretty good - 4.5 stars"></label>
                        
                            <input type="radio" id="star4" name="rating" value="4" />
                            <label class="full" for="star4" title="Pretty good - 4 stars"></label>
                        
                            <input type="radio" id="star3half" name="rating" value="3.5" />
                            <label class="half" for="star3half" title="Meh - 3.5 stars"></label>
                        
                            <input type="radio" id="star3" name="rating" value="3" />
                            <label class="full" for="star3" title="Meh - 3 stars"></label>
                        
                            <input type="radio" id="star2half" name="rating" value="2.5" />
                            <label class="half" for="star2half" title="Kinda bad - 2.5 stars"></label>
                        
                            <input type="radio" id="star2" name="rating" value="2" />
                            <label class="full" for="star2" title="Kinda bad - 2 stars"></label>
                        
                            <input type="radio" id="star1half" name="rating" value="1.5" />
                            <label class="half" for="star1half" title="Meh - 1.5 stars"></label>
                        
                            <input type="radio" id="star1" name="rating" value="1" />
                            <label class="full" for="star1" title="Sucks big time - 1 star"></label>
                        
                            <input type="radio" id="starhalf" name="rating" value="0.5" />
                            <label class="half" for="starhalf" title="Sucks big time - 0.5 stars"></label>




                            //- <input type="radio" id="star5" name="rating" value="5" /><label class = "full" for="star5" title="Awesome - 5 stars"></label>
                            //- <input type="radio" id="star4half" name="rating" value="4 and a half" /><label class="half" for="star4half" title="Pretty good - 4.5 stars"></label>
                            //- <input type="radio" id="star4" name="rating" value="4" /><label class = "full" for="star4" title="Pretty good - 4 stars"></label>
                            //- <input type="radio" id="star3half" name="rating" value="3 and a half" /><label class="half" for="star3half" title="Meh - 3.5 stars"></label>
                            //- <input type="radio" id="star3" name="rating" value="3" /><label class = "full" for="star3" title="Meh - 3 stars"></label>
                            //- <input type="radio" id="star2half" name="rating" value="2 and a half" /><label class="half" for="star2half" title="Kinda bad - 2.5 stars"></label>
                            //- <input type="radio" id="star2" name="rating" value="2" /><label class = "full" for="star2" title="Kinda bad - 2 stars"></label>
                            //- <input type="radio" id="star1half" name="rating" value="1 and a half" /><label class="half" for="star1half" title="Meh - 1.5 stars"></label>
                            //- <input type="radio" id="star1" name="rating" value="1" /><label class = "full" for="star1" title="Sucks big time - 1 star"></label>
                            //- <input type="radio" id="starhalf" name="rating" value="half" /><label class="half" for="starhalf" title="Sucks big time - 0.5 stars"></label>
                    </div>
                    <div class="movie-desc grey">#{movie.overview}</div>
                    <div class="movie-features">
                        <div class="movie-tags">
                            each genre, index in movieGenres
                                <div class="tag grey">
                                    <i class="fas fa-tag"></i>
                                    <span>#{genre.name}</span>
                                    //-  a(onclick=`filterByGenre(${genre.id})`, class="primary-link detail-genre-filter-link", data-genre=`${genre.id}`)
                                    //-     <span>#{genre.name}</span>
                                </div>
                        </div>
                        <div class="movie-actions">
                            if movie.onLibrary
                                <div class="action secondary" id="action-library">
                                    input(type="checkbox", class="custom-check", id="toggleLibrary", checked)
                                    label(for="toggleLibrary")
                                </div>
                            else
                                <div class="action grey" id="action-library">
                                    input(type="checkbox", class="custom-check", id="toggleLibrary")
                                    label(for="toggleLibrary")
                                </div>
                                
                            if movie.isFav
                                <div class="action secondary" id="action-fav">
                                    input(type="checkbox", class="custom-check", id="toggleFav", checked)
                                    label(for="toggleFav")
                                </div>
                            else
                                <div class="action grey" id="action-fav">
                                    input(type="checkbox", class="custom-check", id="toggleFav")
                                    label(for="toggleFav")
                                </div>
                        </div>
                    </div>

